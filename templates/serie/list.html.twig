{% extends 'base.html.twig' %}

{% block title %}Catalogue des s√©ries{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="mb-4 text-center">üìö Catalogue des s√©ries</h2>

        {% if series is not empty %}
            <div class="row row-cols-1 row-cols-md-2 g-4">
                {% for serie in series %}
                    <div class="col">
                        <div class="card h-100">
                            <a href="{{ path('serie_detail', {id: serie.id}) }}">
                                <img src="{{ asset('uploads/posters/series/' ~ serie.poster) }}" class="card-img-top" alt="Poster de {{ serie.name }}" loading="lazy">
                            </a>
                            <div class="card-body">
                                <h4 class="card-title">{{ serie.name }}</h4>
                                <p class="card-text">
                                    <strong>Nombre de saisons :</strong> {{ serie.seasons|length }}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center">üò¢ Aucune s√©rie trouv√©e.</p>
        {% endif %}

        {# Pagination #}
        <nav aria-label="Navigation des pages" class="mt-4">
            <ul class="pagination justify-content-center">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('_list', {'page': currentPage - 1}) }}">‚óÄÔ∏è Page pr√©c√©dente</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">‚óÄÔ∏è Page pr√©c√©dente</span>
                    </li>
                {% endif %}

                <li class="page-item active">
                    <span class="page-link">Page {{ currentPage }} sur {{ totalPages }}</span>
                </li>

                {% if currentPage < totalPages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('_list', {'page': currentPage + 1}) }}">Page suivante ‚ñ∂Ô∏è</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">Page suivante ‚ñ∂Ô∏è</span>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
{% endblock %}
