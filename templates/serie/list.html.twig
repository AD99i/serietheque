{% extends 'base.html.twig' %}
{% block title %}Series{% endblock %}

{% block body %}
    <h2>Catalogue</h2>

    <table>

        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Status</th>
            <th>Vote</th>
            <th>Popularité</th>
            <th>First Air Date</th>
            <th>Lasst Air Date</th>
            <th>Actions</th>
        </tr>
        {% for serie in series %}
        <tr>
            <td>{{ serie.id }}</td>
            <td>{{ serie.name }}</td>
            <td>{{ serie.status }}</td>
            <td>{{ serie.vote }}</td>
            <td>{{ serie.popularity }}</td>
            <td>{{ serie.firstAirDate|date('d/m/Y') }}</td>
            <td>{{ serie.lastAirDate ? serie.LastAireDate|date('d/m/Y') : '' }}</td>
            <td>
                <a href="{{ path('detail', {'id': serie.id}) }}">Détails</a>
                <a href="{{ path('edit', {'id': serie.id}) }}">Modifier</a>
                <a href="{{ path('delete', {'id': serie.id}) }}">Supprimer</a>
        </tr>
        {% endfor %}
    </table>


{% endblock %}
