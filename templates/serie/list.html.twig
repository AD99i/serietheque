{% extends 'base.html.twig' %}

{% block title %}Catalogue des séries{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="mb-4">Catalogue des séries</h2>

<section class="series-list">
    {% for serie in series %}
        <a href="{{ path('_detail', {id : serie.id}) }}">
            <img src="{{ asset('uploads/posters/series/' ~ serie.poster) }}" width="250px" alt="{{ 'Poster de ' ~ serie.name }}" loading="lazy" >
        </a>
    {% else %}
        <p>Aucune série trouvée.</p>
    {% endfor %}
</section>

        {# Pagination simple #}
        <nav aria-label="Navigation des pages">
            <ul class="pagination justify-content-center">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('_list', {'page': currentPage - 1}) }}">◀️ Page précédente</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">◀️ Page précédente</span>
                    </li>
                {% endif %}

                <li class="page-item active">
                    <span class="page-link">Page {{ currentPage }} sur {{ totalPages }}</span>
                </li>

                {% if currentPage < totalPages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('_list', {'page': currentPage + 1}) }}">Page suivante ▶️</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">Page suivante ▶️</span>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
{% endblock %}
