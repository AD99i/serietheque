{% extends 'base.html.twig' %}

{% block title %}Détails de la série{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="mb-4">Détails de la série</h2>

        <table class="table table-bordered">
            <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Status</th>
                <th>Vote</th>
                <th>Popularité</th>
                <th>Première diffusion</th>
                <th>Dernière diffusion</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ serie.id }}</td>
                <td>{{ serie.name }}</td>
                <td>{{ serie.status }}</td>
                <td>{{ serie.vote }}</td>
                <td>{{ serie.popularity }}</td>
                <td>{{ serie.firstAirDate|date('d/m/Y') }}</td>
                <td>{{ serie.lastAirDate ? serie.lastAirDate|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="#" class="btn btn-warning btn-sm">Modifier</a>
                    <a href="#" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('list') }}" class="btn btn-secondary mt-3">Retour au catalogue</a>
    </div>
{% endblock %}
