{% extends 'base.html.twig' %}

{% block title %}D√©tails de la s√©rie{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% block body %}
    <style>
        body {
            background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.9)),
            url('{{ asset('uploads/backdrops/' ~ serie.backdrop) }}');
            background-size: cover;
            background-position: center;
            color: white;
        }
        .card {
            background-color: rgba(255, 255, 255, 0.95);
        }
    </style>

    <div class="container mt-5">
        <h2 class="mb-4 text-center text-light">üé¨ D√©tails de la s√©rie</h2>

        <div class="card shadow-lg">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="{{ asset('uploads/posters/series/' ~ serie.poster) }}" class="img-fluid rounded-start" alt="Poster de {{ serie.name }}">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title">{{ serie.name }}</h3>
                        <p><strong>Description :</strong> {{ serie.overview }}</p>
                        <p><strong>Status :</strong> {{ serie.status }}</p>
                        <p><strong>Vote :</strong> ‚≠ê {{ serie.vote }}</p>
                        <p><strong>Popularit√© :</strong> üî• {{ serie.popularity }}</p>
                        <p><strong>Premi√®re diffusion :</strong> {{ serie.firstAirDate|date('d/m/Y') }}</p>
                        {% if serie.lastAirDate %}
                            <p><strong>Derni√®re diffusion :</strong> {{ serie.lastAirDate|date('d/m/Y') }}</p>
                        {% endif %}

                        {% if serie.seasons is not empty %}
                            <div class="mt-4">
                                <h5>Saisons :</h5>
                                <div class="accordion" id="accordionSeasons">
                                    {% for season in serie.seasons %}
                                        <div class="accordion-item">
                                            <h2 class="accordion-header" id="heading{{ season.id }}">
                                                <button class="accordion-button collapsed" type="button"
                                                        data-bs-toggle="collapse"
                                                        data-bs-target="#collapse{{ season.id }}"
                                                        aria-expanded="false"
                                                        aria-controls="collapse{{ season.id }}">
                                                    Saison {{ season.number }} ‚Äì {{ season.firstAirDate|date('d/m/Y') }}
                                                </button>
                                            </h2>
                                            <div id="collapse{{ season.id }}"
                                                 class="accordion-collapse collapse"
                                                 aria-labelledby="heading{{ season.id }}">
                                                <div class="accordion-body">
                                                    {{ season.overview ?: 'Pas de description disponible.' }}
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% else %}
                            <p class="text-muted">Aucune saison enregistr√©e pour cette s√©rie.</p>
                        {% endif %}

                        <div class="mt-4">
                            <a href="{{ path('serie_update', {id: serie.id}) }}" class="btn btn-warning me-2">‚úèÔ∏è Modifier</a>
                            <form method="post" action="{{ path('serie_delete', {id: serie.id}) }}" class="d-inline" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette s√©rie ?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ serie.id) }}">
                                <button class="btn btn-danger">üóëÔ∏è Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('_list') }}" class="btn btn-outline-light">‚¨ÖÔ∏è Retour au catalogue</a>
        </div>
    </div>
{% endblock %}
